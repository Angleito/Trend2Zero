# API Keys for cryptocurrency data providers
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# API Keys
# Replace these with your actual API keys for production use
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here
METAL_PRICE_API_KEY=your_metalprice_api_key_here
MCP_API_KEY=your_mcp_api_key_here
MCP_SERVER_URL=http://localhost:8081

# API configuration
USE_MOCK_DATA=false

# API provider weights (higher number = more requests allocated to that provider)
# Values between 1-10, defaults to 7 for primary provider, 3 for secondary
COINMARKETCAP_WEIGHT=7
COINGECKO_WEIGHT=3

# Rate limiting settings (milliseconds)
RATE_LIMIT_RESET_INTERVAL=60000

# Cache settings (seconds)
CRYPTO_PRICE_CACHE_TTL=300
HISTORICAL_DATA_CACHE_TTL=3600

# Mock data configuration
# Cache duration for mock data in minutes
MOCK_DATA_CACHE_MINUTES=60

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/trend2zero

# Strapi Migration Configuration
STRAPI_API_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here

# Note:
# 1. Replace placeholder values with your actual API keys and tokens
# 2. If Strapi is running on a different host/port, update STRAPI_API_URL accordingly
# 3. Set USE_MOCK_DATA to 'true' for development without valid API keys
