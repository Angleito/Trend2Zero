# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/trend2zero
MONGODB_URI_TEST=mongodb://localhost:27017/trend2zero_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# API Keys (server-side only, not exposed to client)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
COIN_GECKO_API_KEY=your_coingecko_api_key_here

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://trend2zero.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# Logging
LOG_LEVEL=info
