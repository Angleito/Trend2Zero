{
  "name": "trend2zero",
  "version": "1.0.1",
  "description": "Comprehensive Vercel Build and Testing Configuration with Advanced Caching",
  "bin": {
    "trend2zero": "./scripts/cli.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:performance": "node scripts/analyze-build-performance.js",
    "build:cache:clear": "rm -rf .next/cache",
    "build:cache:analyze": "node scripts/analyze-build-performance.js --cache-only",
    "build:cache:validate": "node scripts/validate-build-cache.js",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "nyc --reporter=html --reporter=text jest",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/home-page-visual.spec.ts",
    "test:visual:update": "playwright test tests/home-page-visual.spec.ts --update-snapshots",
    "test:visual:report": "playwright show-report",
    "test:performance": "lighthouse http://localhost:3000 --view",
    "cache:metrics": "node scripts/cache-handler.js --metrics",
    "cache:prune": "node scripts/cache-handler.js --prune",
    "vercel:deploy": "vercel",
    "vercel:deploy:prod": "vercel --prod",
    "monitor:build": "./scripts/run-continuous-monitor.sh"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@types/dotenv": "^6.1.1",
    "@types/highcharts": "^5.0.44",
    "@types/react-dom": "^19.1.2",
    "@vercel/speed-insights": "^1.0.0",
    "axios": "^1.8.4",
    "commander": "^12.1.0",
    "dotenv": "^16.5.0",
    "highcharts": "^12.2.0",
    "highcharts-react-official": "^3.2.1",
    "lightweight-charts": "^5.0.5",
    "mongoose": "^8.13.2",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-syntax-import-attributes": "^7.26.0",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-private-methods": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@next/bundle-analyzer": "^14.1.0",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.0.0",
    "nyc": "^15.1.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "cacheManagement": {
    "maxSizeMB": 500,
    "expirationDays": 7
  }
}
